# Database Configuration
# PostgreSQL connection string from your Linux server
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/digitalnurse

# Server Configuration
# Port is automatically set by Railway, but you can override if needed
PORT=3000
NODE_ENV=production

# CORS Configuration
# Set to '*' to allow all origins (for testing), or specify your mobile app's origin
FRONTEND_URL=*

# JWT Authentication
# Generate strong secrets for production (use: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=30d

# Google OAuth (Optional - only if using Google sign-in)
# Leave empty if not using Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Stripe Payment Integration (Optional - only if using Stripe)
# Leave empty if not using Stripe payments
STRIPE_SECRET_KEY=
STRIPE_BASIC_PRICE_ID=price_basic
STRIPE_PREMIUM_PRICE_ID=price_premium
